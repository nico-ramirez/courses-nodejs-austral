extends ../layout 

block content 
    a(href='/bicicletas/create') Agregar

    table.table 
        thead 
            tr 
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col')
                th(scope='col')
            tbody
                each bici in bicis
                    tr  
                        td(scope='row')
                          = bici.code
                        td= bici.color
                        td= bici.modelo
                        td= bici.ubicacion
                        td 
                            a(href='bicicletas/'+bici.id+'/update') Editar
                        td
                            form.inline(method='post' action='bicicletas/'+bici.code+'/delete')
                                input(type='hidden' name='code' value=bici.code)
                                button.link-button(type='submit' name='submit_param' value='submit_value' class='btn') 
                                    = 'ELiminar'